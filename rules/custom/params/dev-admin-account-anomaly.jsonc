{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceName": {
      "value": "sentinel-ws-dev"
    },
    "ruleDisplayName": {
      "value": "[DEV] [ORG] â€“ Admin Account Anomaly Detection (T1078)"
    },
    "ruleEnabled": {
      "value": true
    },
    "ruleSeverity": {
      "value": "Medium"
    },
    "detectionQuery": {
      "value": "SigninLogs | where TimeGenerated > ago(1h) | where ResultType == 0 | where UserPrincipalName has \"@\" | where AppDisplayName in~ (\"Microsoft Azure PowerShell\", \"Microsoft Azure CLI\", \"Azure Portal\") | summarize LoginCount = count(), Applications = make_set(AppDisplayName), IPAddresses = make_set(IPAddress), Locations = make_set(Location), TimeSpan = max(TimeGenerated) - min(TimeGenerated) by UserPrincipalName, bin(TimeGenerated, 5m) | where LoginCount >= 2 | where TimeSpan < 30m | take 100"
    },
    "queryFrequency": {
      "value": "PT1H"
    },
    "queryPeriod": {
      "value": "PT1H"
    },
    "attackTactics": {
      "value": [
        "Persistence",
        "PrivilegeEscalation",
        "DefenseEvasion"
      ]
    },
    "attackTechniques": {
      "value": [
        "T1078"
      ]
    },
    "createIncident": {
      "value": false
    },
    "groupAlerts": {
      "value": true
    },
    "groupingMethod": {
      "value": "AllEntities"
    },
    "groupByFields": {
      "value": "UserPrincipalName"
    }
  }
}
